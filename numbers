n=5
p=1
for i in range(n):
    for j in range(i,n):
        print(" ",end=" ")
    for j in range(i):
        if i%2==0:
           print("1",end=" ")
        else:
            print("2",end=" ")
    for j in range(i+1):
        if i%2==0:
           print("1",end=" ")
        else:
            print("2",end=" ")
    print()
